---
/**
 * Navigation Component
 * 
 * Main site navigation with responsive behavior and theme toggle. Features centered
 * navigation on desktop and horizontal scrolling on mobile. The theme toggle is fixed
 * at the right edge with a gradient fade effect.
 * 
 * Navigation items are configured in src/config.ts and automatically include a "Home"
 * link at the beginning. Active page highlighting is handled both server-side and
 * client-side for View Transitions support.
 * 
 * @component
 * 
 * @example
 * ```astro
 * <Navigation />
 * ```
 */
import { siteConfig } from '../config';
import ThemeToggle from './ThemeToggle.astro';

const currentPath = Astro.url.pathname;

/**
 * Navigation items with Home prepended
 * 
 * Combines a hardcoded Home link with navigation items from site config
 * to ensure Home is always first in the navigation.
 */
const navItems = [
  { label: 'Home', href: '/' },
  ...siteConfig.nav,
];

/**
 * Determines if a navigation item should be marked as active
 * 
 * Home link is only active on the exact root path. Other links are active
 * if the current path starts with their href, allowing child pages to
 * highlight their parent navigation item.
 * 
 * @param href - The navigation item's URL
 * @returns True if the navigation item should be marked as active
 */
const isActive = (href: string) => {
  if (href === '/') {
    return currentPath === '/';
  }
  return currentPath.startsWith(href);
};
---

<nav class="site-nav" aria-label="Main navigation">
  <div class="nav-scroll">
    <ul class="nav-list">
      {navItems.map((item) => (
        <li class="nav-item">
          <a 
            href={item.href} 
            class:list={['nav-link', { 'nav-link--active': isActive(item.href) }]}
            aria-current={isActive(item.href) ? 'page' : undefined}
          >
            {item.label}
          </a>
        </li>
      ))}
    </ul>
  </div>
  <div class="nav-end">
    <ThemeToggle />
  </div>
</nav>

<script>
  function updateActiveNav() {
    const currentPath = window.location.pathname;
    const navLinks = document.querySelectorAll('.nav-link');
    
    navLinks.forEach((link) => {
      const href = link.getAttribute('href');
      let isActive = false;
      
      if (href === '/') {
        isActive = currentPath === '/';
      } else if (href) {
        isActive = currentPath.startsWith(href);
      }
      
      link.classList.toggle('nav-link--active', isActive);
      if (isActive) {
        link.setAttribute('aria-current', 'page');
      } else {
        link.removeAttribute('aria-current');
      }
    });
  }

  /** Prevent View Transitions (and reload) when clicking the link for the current page. */
  function preventSamePageNav() {
    const nav = document.querySelector('.site-nav');
    if (!nav) return;
    nav.querySelectorAll('.nav-link').forEach((link) => {
      link.removeEventListener('click', handleNavClick, true);
      link.addEventListener('click', handleNavClick, true);
    });
  }

  function handleNavClick(e: Event) {
    const link = e.currentTarget as HTMLAnchorElement;
    const href = link.getAttribute('href');
    if (!href || href.startsWith('#') || link.target === '_blank') return;
    try {
      const pathname = new URL(href, window.location.origin).pathname;
      if (pathname === window.location.pathname) {
        e.preventDefault();
        e.stopImmediatePropagation();
      }
    } catch {
      // ignore invalid URL
    }
  }

  document.addEventListener('astro:page-load', () => {
    updateActiveNav();
    preventSamePageNav();
  });
</script>

<style>
  .site-nav {
    display: flex;
    align-items: center;
    border-bottom: 1px solid var(--color-border);
    background: var(--color-bg);
    padding: var(--space-md) 0;
    margin-bottom: var(--space-md);
  }

  .nav-scroll {
    flex: 1;
    overflow-x: auto;
    overflow-y: hidden;
    -webkit-overflow-scrolling: touch;
    scrollbar-width: none;
    -ms-overflow-style: none;
  }

  .nav-scroll::-webkit-scrollbar {
    display: none;
  }

  .nav-list {
    display: flex;
    flex-wrap: nowrap;
    justify-content: center;
    gap: 2rem;
    list-style: none;
    margin: 0;
    padding: 0.5rem 1.5rem;
    min-width: max-content;
  }

  .nav-item {
    margin: 0;
    flex-shrink: 0;
  }

  .nav-link {
    color: var(--color-text-secondary);
    font-size: 0.8125rem;
    font-weight: 500;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    text-decoration: none;
    transition: color 0.2s ease;
    white-space: nowrap;
  }

  .nav-link:hover {
    color: var(--color-text);
  }

  .nav-link--active {
    color: var(--color-text);
  }

  .nav-end {
    flex-shrink: 0;
    display: flex;
    align-items: center;
    padding: 0 0.75rem;
    border-left: 1px solid var(--color-border);
    background: var(--color-bg);
    position: relative;
  }

  .nav-end::before {
    content: '';
    position: absolute;
    left: -24px;
    top: 0;
    bottom: 0;
    width: 24px;
    background: linear-gradient(to right, transparent, var(--color-bg));
    pointer-events: none;
  }

  @media (max-width: 768px) {
    .nav-list {
      justify-content: flex-start;
      gap: 1.5rem;
      padding: 0.5rem 1rem;
    }

    .nav-link {
      font-size: 0.75rem;
    }

    .nav-end {
      padding: 0 0.5rem;
    }

    .nav-end::before {
      left: -16px;
      width: 16px;
    }
  }
</style>
